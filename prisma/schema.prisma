generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  username  String @unique
  image_url String?
  password  String
  template  Template[]
}

model Template {
  template_id String   @id @default(auto()) @map("_id") @db.ObjectId
  owner       User     @relation(fields: [owner_id], references: [user_id])
  owner_id    String   @db.ObjectId
  name        String
  background  String
  photo       String
  headings    Heading[]
  links       Link[]
}

type Heading {
  fontSize   String
  fontFamily String
  fontColor  String
  fontWeight String
}

type Link {
  name           String
  background     String
  borderColor    String
  borderWidth    String
  borderRadius   String
  url            String
  hoverAnimation String
}