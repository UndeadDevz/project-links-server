generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  username  String @unique
  image_url String?
  password String
  template Template[]
}

model Template {
  template_id       String @id @default(auto()) @map("_id") @db.ObjectId
  owner User @relation(fields: [template_id], references: [user_id])
  name String
  links_id String[] @db.ObjectId 
  links Link[] @relation(fields: [links_id], references: [id])
}

model Link {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  templates Template[] @relation(fields: [template_id], references: [template_id])
  name String
  link String
  template_id String[] @db.ObjectId
}