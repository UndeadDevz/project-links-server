generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  username  String @unique
  image_url String?
  password  String
  template  Template[]
}

model Template {
  template_id String   @id @default(auto()) @map("_id") @db.ObjectId
  owner       User     @relation(fields: [owner_id], references: [user_id])
  owner_id    String   @db.ObjectId
  name        String
  background  String
  photo       String
  title       Title
  items       Element
  linkStyle   LinkStyle
}

type Title {
  text       String
  fontSize   String
  fontFamily String
  fontColor  String
  fontWeight String
}

type Element {
  links Link[]
  header Header[]
}

type Header {
  text     String
  position Int
}

type Link {
  name  String
  url   String
  position Int
}

type LinkStyle {
  background     String
  borderColor    String
  borderWidth    String
  borderRadius   String
  hoverAnimation String
}