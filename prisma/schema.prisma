generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  username  String @unique
  image_url String?
  password  String
  template  Template[]
}

model Template {
  template_id String   @id @default(auto()) @map("_id") @db.ObjectId
  owner       User     @relation(fields: [owner_id], references: [user_id])
  owner_id    String   @db.ObjectId
  name        String
  background  String
  photo       String
  title       Title
  items       Element
  linkStyle   LinkStyle
  headerStyle HeaderStyle
}

type Title {
  text       String
  fontSize   String
  fontFamily String
  fontColor  String
  fontWeight String
}

type Element {
  links Link[]
  headers Header[]
}

type Header {
  text     String
  position Int
  enabled Boolean
}

type Link {
  name      String
  url      String
  position Int
  enabled  Boolean
}

type LinkStyle {
  background     String
  borderColor    String
  borderWidth    String
  borderRadius   String
  hoverAnimation String
}

type HeaderStyle {
  fontSize  String
  fontColor String
  fontWeight String
}